<!DOCTYPE html>
<html>
  <head>
    <title>Portfolio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div class="container-fluid">
    <div class="row">
      <nav class="navigation container">
        <div class="col-md-12">
        <ul class="navigation-bar">
          <h3><li class="navigation-item <%= 'cp' if params[:controller] == 'welcome' %>"><%= link_to 'HOME', root_path %></li></h3>
          <h3><li class="navigation-item <%= 'cp' if params[:controller] == 'skills' %>"><%= link_to 'SKILLS', skills_path %></li></h3>
          <h3><li class="navigation-item <%= 'cp' if params[:controller] == 'projects' %>"><%= link_to 'WORK', projects_path %></li></h3>
          <h3><li class="navigation-item <%= 'cp' if params[:controller] == 'articles' %>"><%= link_to 'ARTICLES', articles_path %></li></h3>
          <h3><li class="navigation-item <%= 'cp' if params[:controller] == 'cv' %>"><%= link_to 'CV', cv_path %></li></h3>
          <h3><li class="navigation-item <%= 'cp' if params[:controller] == 'contact' %>"><%= link_to 'CONTACT', contact_path %></li></h3>
          <li class="social">
            <ul class="social-links">
              <% if user_signed_in? %>
                <li class="social-icon"><%= link_to image_tag('logouticon.png', size: "26x26"), destroy_user_session_path, :method => :delete, data: { confirm: "Are you sure you want to log out?"} %></li>
                <li class="social-icon"><%= link_to image_tag('usericon.png', size: "26x26"), edit_user_registration_path %></li>
              <% else %>
                <li class="social-icon"><%= link_to image_tag('usericon.png', size: "26x26"), new_user_session_path %></li>
              <% end %>
              <li class="social-icon"><%= link_to image_tag('linkedinlogo.png', size: "26x26"), 'https://www.linkedin.com/in/menno-godeke-b5b09b10a', :target => "_blank" %></li>
              <li class="social-icon"><%= link_to image_tag('githubicon.png', size: "26x26"), 'https://github.com/mennogodeke', :target => "_blank" %></li>
            </ul>
          </li>
        </ul>
        </div>
      </nav>
    </div>

    <div class="row">
      <header class="container-fluid">
          <%= image_tag("header.jpg") %>
      </header>
    </div>

    <div class="row">
    <div id="content" class="container">
      <%= yield %>
    </div>
    </div>
  </div>
</html>
