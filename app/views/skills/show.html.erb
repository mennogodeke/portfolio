<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @skill.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @skill.description %>
</p>

<h2>Activities</h2>

<%= render @skill.activeties %>
<% if can? :manage, :all %>

  <h2>Add an activity:</h2>
  <%= form_for([@skill, @skill.activeties.build]) do |f| %>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.submit %>
      </p>
  <% end %>

<% end %>
<% if can? :manage, :all %>
  <%= link_to 'Edit', edit_skill_path(@skill) %>
<% end  %>
<%= link_to 'Back', skills_path %>
