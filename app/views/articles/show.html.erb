<span class="col-md-8"><h1 class="title"><%= @article.title %></h1></span>


<div class="content-item">
  <div class="title-block col-md-12">
    <span class="col-md-6"><h2>Getting things done!</h2></span>
  </div>
  <div class="item-block col-md-10">
      <p>
        <%= @article.text %><br>
        <div class="item-link">
        <%= link_to 'Back', articles_path %>
        </div>
      </p>
  </div>
</div>

<div id="comments">
  <span class="col-md-12"><h2 class="title">Discussion</h2></span>

  <div class="item-block col-md-10">
    <%= render @article.comments %>
  </div>
  <% if user_signed_in? %>
      <h2>Add a comment:</h2>
      <%= render 'comments/form' %>
  <% else %>
  <div class="comment col-md-10">
    <p>
      you have to <%= link_to('Login', new_user_session_path)  %> to create comments
    </p>
  </div>
  <% end  %>
</div>
