<h1><%= @article.title %></h1>


<%= markdown @article.text %>

<%= link_to 'Back', articles_path %>

<% if can? :manage, :all %>
    <%= link_to 'edit', edit_article_path(@article) %>
<% end %>


<h2>Comments</h2>
  <%= render @article.comments %>
  <% if user_signed_in? %>
      <h2>Add a comment:</h2>
      <%= render 'comments/form' %>
  <% else %>
    <p>
      you have to <%= link_to('Login', new_user_session_path)  %> to create comments
    </p>
  </div>
  <% end  %>
</div>
