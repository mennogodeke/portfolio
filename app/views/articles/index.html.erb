
<h1>articles</h1>


<% @articles.each do |article|  %>
    <h2><%= article.title %></h2>
      <p>
        <%= article.text.truncate_words(25) %><br>
        <%= link_to 'read more', article%>
      </p>
      <p>
        <%= l article.created_at, :format => :simple %>
      </p>
<% end %>


<% if can? :manage, :all %>
  <%= link_to 'New article', new_article_path %>
<% end %>