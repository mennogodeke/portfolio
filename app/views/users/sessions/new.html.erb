<span class="col-md-3"><h1>log in</h1></span>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="content-item">
      <div class="title-block col-md-12">
        <span class="col-md-6"><h2>credentials</h2></span>
      </div>
      <div class="skill-block col-md-10">
        <div class="skill-desc col-md-6">
          <p>
          <div class="field">
            <%= f.label :email %><br>
            <%= f.email_field :email, autofocus: true %>
          </div>
          </p>
          <p>
          <div class="field">
            <%= f.label :password %><br>
            <%= f.password_field :password%>
          </div>
          </p>
          <p>
            <div>
              <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
              <% end -%>
            </div>
          </p>
          <p>
          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
          </p>
          <p>
            <div>
              <%= render "users/shared/links" %>
            </div>
          </p>
        </div>
      </div>
    </div>



<% end %>


