<p id="notice"><%= notice %></p>

<h1>Educations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>School</th>
      <th>Location</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Diploma</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.name %></td>
        <td><%= education.school %></td>
        <td><%= education.location %></td>
        <td><%= education.start_date %></td>
        <td><%= education.end_date %></td>
        <td><%= education.diploma %></td>
        <td><%= link_to 'Show', education %></td>
        <% if can? :manage, :all %>
          <td><%= link_to 'Edit', edit_education_path(education) %></td>
          <td><%= link_to 'Destroy', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :manage, :all %>
  <%= link_to 'New Education', new_education_path %>
<% end  %>